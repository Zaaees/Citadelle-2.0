# Configuration Discord Bot - Citadelle 2.0
# Copiez ce fichier vers .env et remplissez les valeurs

# Discord Bot Token (OBLIGATOIRE)
DISCORD_TOKEN=your_discord_bot_token_here

# Google Service Account JSON (OBLIGATOIRE pour les cartes et Google Sheets)
SERVICE_ACCOUNT_JSON=your_google_service_account_json_here

# Configuration du serveur HTTP
PORT=10000
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# Configuration du monitoring de santé (NOUVELLE CONFIGURATION ROBUSTE)
# Nombre maximum d'échecs avant redémarrage automatique
HEALTHCHECK_MAX_FAILURES=5

# Active le redémarrage automatique du bot (RECOMMANDÉ: true)
HEALTHCHECK_FORCE_RESTART=true

# Configuration avancée Discord (optionnel)
# Timeout pour les heartbeats Discord (secondes)
DISCORD_HEARTBEAT_TIMEOUT=30

# Timeout pour la préparation des guildes (secondes) 
DISCORD_GUILD_READY_TIMEOUT=5

# Configuration des logs (optionnel)
LOG_LEVEL=INFO

# Configuration des ressources (optionnel)
# Limite mémoire en MB pour le nettoyage automatique
MEMORY_CLEANUP_THRESHOLD=500

# Intervalle de nettoyage des ressources en secondes
RESOURCE_CLEANUP_INTERVAL=1800